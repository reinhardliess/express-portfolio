extends layout.pug

block content
  nav.grid-container.portfolio-breadcrumb
    include back-button.pug
    include lang-buttons.pug
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{assets[language]['name']}

        p.lead.text-light
          | #{assets[language]['job-title']}

        .portfolio-bio.animated.fadeIn
          p
            | !{assets[language]['portfolio-bio']}
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 #{assets[language]['skills']['skills-text']}

        ul
          each skill in assets[language]['skills']['skills-list']
            li= skill
        h6 #{assets[language]['contact-info']}

        ul
          li &#9742; +49 176 76987529
          li
            a(href='mailto:reinhard.liess@gmail.com', target='_blank', rel='noopener noreferrer') &#9993; reinhard.liess@gmail.com

        //- Social media accounts
        div.soc-med
          a(href='https://twitter.com/rliessdev', target='_blank', rel='noopener noreferrer')
            ion-icon(name='logo-twitter')
          a(href='https://github.com/rliess', target='_blank', rel='noopener noreferrer')
            ion-icon(name='logo-github')
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê #{assets[language]['back-button']}
